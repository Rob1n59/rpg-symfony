{# templates/game/location_show.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Exploration de {{ location.name }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/game_location_show.css') }}">
{% endblock %}

{% block body %}
    <div class="game-page-background" style="--blurred-bg-image: url('{{ asset('images/location_scenes/' ~ location.id ~ '.png') }}');"></div>

    <div class="game-container">
        
        <div class="panel player-stats-panel">
            <h2>{{ player.name }}</h2>
            {% set classFileName = player.playerClassName|lower %}
            {% if classFileName == 'guerrier' %}{% set classFileName = 'warrior' %}
            {% elseif classFileName == 'mage' %}{% set classFileName = 'mage' %}
            {% elseif classFileName == 'archer' %}{% set classFileName = 'archer' %}{% endif %}
            <img src="{{ asset('images/classes/' ~ classFileName ~ '.png') }}" alt="Portrait du {{ player.playerClassName }}" class="player-portrait">
            <div class="player-info">
                <p><strong>Niveau:</strong> {{ player.level }}</p>
    
                <p class="hp-text"><strong>HP:</strong> {{ player.hp }} / {{ player.hpMax }}</p>
                <div class="hp-bar-container">
                {% set hpPercentage = (player.hp / player.hpMax) * 100 %}
                <div class="hp-bar-fill" style="width: {{ hpPercentage }}%;"></div>
            </div>
             {% set xpOnLevel = player.experience - xpRequiredCurrent %}
    {% set xpNeededForLevel = xpRequiredNext - xpRequiredCurrent %}
    
    {% if xpNeededForLevel == 0 and player.level == 1 %}
        {% set xpNeededForLevel = 100 %} 
    {% endif %}
    
    {% set xpDenominator = xpNeededForLevel > 0 ? xpNeededForLevel : 1 %} 
    {% set xpPercentage = (xpOnLevel / xpDenominator) * 100 %}
    {% set safeXpPercentage = xpPercentage > 100 ? 100 : xpPercentage %}

    <p class="xp-text">
        <strong>XP:</strong> <span id="player-xp-value">{{ xpOnLevel }}</span> / {{ xpNeededForLevel }}
    </p>
        <div class="xp-bar-container">
        <div id="player-xp-fill" class="xp-bar-fill" style="width: {{ safeXpPercentage|default(0) }}%;"></div>
    </div>
                <p id="player-attack-stat">
           
                <strong>Attaque:</strong> {{ player.calculateTotalAttack() }}
                </p>
    
                <p id="player-defense-stat">
                    <strong>Défense:</strong> {{ player.calculateTotalDefense() }}
                </p>
    
                <p><strong>Or:</strong> <span id="player-gold-value">{{ player.gold }}</span></p> 
                <p><strong>XP:</strong> {{ player.experience }}</p>
    
                <a href="#" 
                   id="inventory-button" 
                   class="action-button inventory-action-btn"
                   data-inventory-url="{{ path('game_inventory') }}">
                    Inventaire
                </a>
            </div>
        </div>

        <div class="main-game-area" style="background-image: url('{{ asset('images/location_scenes/' ~ location.id ~ '.png') }}');"></div>

        <div class="panel location-info-panel">
            <h2>Location</h2>
            <img src="{{ asset('images/location_icons/location_default.png') }}" alt="Icône du lieu" class="location-icon">
            <p><strong>{{ location.name }}</strong></p>
            <p class="location-description">{{ location.description }}</p>
            <p>Danger Level: <span style="color:
                {% if location.dangerLevel == 'Très faible' %}lightgreen
                {% elseif location.dangerLevel == 'Faible' %}yellowgreen
                {% elseif location.dangerLevel == 'Élevé' %}orange
                {% elseif location.dangerLevel == 'Très Élevé' %}red
                {% else %}white
                {% endif %};">
                {{ location.dangerLevel }}
            </span></p>

            <div class="action-buttons">
                <ul class="js-action-list">
                    {% for option in sceneOptions %}
                        <li>
                            <a href="{{ path('game_handle_option', {'locationId': location.id, 'optionId': option.id}) }}"
                               data-option-id="{{ option.id }}">
                                {{ option.text }}
                            </a>
                        </li>
                    {% endfor %}
                </ul>
            </div>
        </div>

        <div class="panel game-logs-panel">
            <h3>Logs d'activités</h3>
            <div class="logs-content">
                <p>Bienvenue dans {{ location.name }} !</p>
                
                {% for label, messages in app.flashes %}
                    {% for message in messages %}
                        <p class="log-entry alert-{{ label }}">
                            {{ message|raw }}
                        </p>
                    {% endfor %}
                {% endfor %}
            </div>
        </div>
        
    </div>
   
<div id="item-tooltip" class="item-tooltip hidden">
    <h4 id="tooltip-name">Nom de l'Objet</h4>
    <p id="tooltip-description"></p>
    <hr class="tooltip-divider">
    <p>ATK Bonus : <span id="tooltip-attack" class="stat-value"></span></p>
    <p>DEF Bonus : <span id="tooltip-defense" class="stat-value"></span></p>
    <button id="equip-button" class="action-button small-btn js-equip-item" data-player-item-id="0">Équiper</button>
</div>
    
<div id="inventory-modal" class="modal-overlay hidden">
    
    <div id="inventory-ajax-content">
        </div>
</div>
{% endblock %}

{% block javascripts %}
    <script>
    
    // --- FONCTION PRINCIPALE ---
    function initLocationListeners() {
        
        // --- 1. DÉCLARATION ET SÉCURISATION DES VARIABLES LOCALES DANS LA PORTÉE ---
        const logsContent = document.querySelector('.game-logs-panel .logs-content');
        const inventoryButton = document.getElementById('inventory-button');
        const inventoryModal = document.getElementById('inventory-modal');
        const inventoryAjaxContent = document.getElementById('inventory-ajax-content'); 
        // const actionButtonsContainer = document.querySelector('.js-action-list'); // Inutile si on utilise document.body

        const itemTooltip = document.getElementById('item-tooltip');
        const playerHpText = document.querySelector('.player-stats-panel .hp-text'); 
        const playerHpFill = document.querySelector('.player-stats-panel .hp-bar-fill'); 
        const playerAttackStat = document.getElementById('player-attack-stat'); 
        const playerDefenseStat = document.getElementById('player-defense-stat');
        const playerGoldValue = document.getElementById('player-gold-value'); 
        
        function scrollToBottom() {
            if (logsContent) {
                logsContent.scrollTop = logsContent.scrollHeight;
            }
        }
        scrollToBottom();

        // --- 2. FONCTION D'ATTACHEMENT (Rattache les événements de l'inventaire AJAX) ---
        // Cette fonction doit être définie ici pour accéder aux variables déclarées ci-dessus
        function attachInventoryListeners() {
            const equipButton = document.getElementById('equip-button');
            const inventorySlots = document.querySelectorAll('#inventory-ajax-content .js-item-slot');
            
            let hideTooltipTimeout;
            const TOOLTIP_DELAY = 150; 
            
            if (!itemTooltip || !equipButton) {
                return; 
            }

            const showTooltip = (e, slot) => {
                clearTimeout(hideTooltipTimeout); 

                // Remplissage du contenu
                document.getElementById('tooltip-name').textContent = slot.dataset.name;
                document.getElementById('tooltip-description').textContent = slot.dataset.desc;
                document.getElementById('tooltip-attack').textContent = slot.dataset.atk;
                document.getElementById('tooltip-defense').textContent = slot.dataset.def;
                
                // Logique Consommable vs Équipable
                const itemType = slot.dataset.type;
                const isConsumable = itemType === 'consumable';
                const isEquipped = slot.dataset.equipped === 'true';

                if (isConsumable) {
                    equipButton.textContent = 'UTILISER';
                    equipButton.classList.add('consume-action');
                    equipButton.classList.remove('equip-action');
                } else {
                    equipButton.textContent = isEquipped ? 'Déséquiper' : 'Équiper';
                    equipButton.classList.add('equip-action');
                    equipButton.classList.remove('consume-action');
                }

                equipButton.dataset.playerItemId = slot.dataset.id;
                
                // Affichage et positionnement
                itemTooltip.style.left = `${e.clientX + 15}px`;
                itemTooltip.style.top = `${e.clientY - itemTooltip.offsetHeight / 2}px`;
                itemTooltip.classList.add('visible');
                itemTooltip.classList.remove('hidden');
            };

            const startHideTooltipTimer = () => {
                hideTooltipTimeout = setTimeout(() => {
                    itemTooltip.classList.add('hidden');
                    itemTooltip.classList.remove('visible');
                }, TOOLTIP_DELAY); 
            };

            // ÉCOUTEURS sur les slots d'inventaire
            inventorySlots.forEach(slot => {
                const itemId = slot.dataset.id;
                if (!itemId) return; 

                slot.addEventListener('mouseover', (e) => {
                    showTooltip(e, slot);
                });

                slot.addEventListener('mouseleave', () => {
                    startHideTooltipTimer(); 
                });
            });

            // ÉCOUTEURS sur l'infobulle elle-même
            itemTooltip.addEventListener('mouseover', () => {
                clearTimeout(hideTooltipTimeout); 
            });

            itemTooltip.addEventListener('mouseleave', () => {
                itemTooltip.classList.add('hidden');
                itemTooltip.classList.remove('visible');
            });
        }

        // --- 3. GESTION DE L'INVENTAIRE (Ouverture) ---
        if (inventoryButton && inventoryModal && inventoryAjaxContent) {
            inventoryButton.addEventListener('click', (e) => {
                e.preventDefault(); 
                
                if (inventoryModal.classList.contains('hidden') || inventoryAjaxContent.innerHTML.trim() === "") { 
                    const url = inventoryButton.dataset.inventoryUrl; 
                    
                    inventoryAjaxContent.innerHTML = '<div style="text-align:center; padding: 50px;">Chargement de l\'inventaire...</div>';
                    inventoryModal.classList.remove('hidden');

                    fetch(url, { method: 'GET' })
                        .then(response => {
                            if (!response.ok) { 
                                throw new Error('Erreur de chargement: ' + response.statusText); 
                            }
                            return response.text(); 
                        })
                        .then(html => {
                            inventoryAjaxContent.innerHTML = html;
                            
                            const closeButton = document.getElementById('close-inventory-button');
                            if (closeButton) {
                                closeButton.addEventListener('click', () => {
                                    inventoryModal.classList.add('hidden');
                                    itemTooltip.classList.add('hidden'); 
                                });
                            }
                            // CRITIQUE : Rattachement des listeners après chargement AJAX
                            attachInventoryListeners(); 
                        })
                        .catch(error => {
                            console.error('Erreur de chargement de l\'inventaire:', error);
                            inventoryAjaxContent.innerHTML = '<div style="color: red; padding: 20px;">Erreur lors du chargement.</div>';
                        });
                        
                } else {
                    inventoryModal.classList.remove('hidden');
                }
            });
            
            inventoryModal.addEventListener('click', (e) => {
                if (e.target === inventoryModal) {
                    inventoryModal.classList.add('hidden');
                    itemTooltip.classList.add('hidden'); 
                }
            });
        }
        
        // --- 4. GESTION DE TOUTES LES ACTIONS AJAX (Délégation sur le body) ---
        document.body.addEventListener('click', function(e) {
            
            // Cas A : Clic sur le bouton EQUIPER/UTILISER (dans le Tooltip)
            const tooltipActionButton = e.target.closest('#equip-button');
            
            if (tooltipActionButton) {
                e.preventDefault(); 
                
                const playerItemId = tooltipActionButton.dataset.playerItemId;
                itemTooltip.classList.add('hidden'); 

                const isConsuming = tooltipActionButton.classList.contains('consume-action');
                
                let url;
                let isEquipAction = false;
                
                if (isConsuming) {
                    url = `{{ path('game_consume_item', {'playerItemId': 'PLAYER_ITEM_ID'}) }}`.replace('PLAYER_ITEM_ID', playerItemId);
                } else {
                    url = `{{ path('game_equip_item', {'playerItemId': 'PLAYER_ITEM_ID'}) }}`.replace('PLAYER_ITEM_ID', playerItemId);
                    isEquipAction = true;
                }
                
                fetch(url, { method: 'POST' })
                    .then(response => {
                        if (!response.ok) {
                            return response.text().then(text => { throw new Error(text || 'Réponse non valide du serveur.'); });
                        }
                        return response.json(); 
                    })
                    .then(data => {
                        if (data.status === 'success') {
                            
                            if (isConsuming) {
                                // Mise à jour des PV visibles (Consommation)
                                const playerHpText = document.querySelector('.player-stats-panel .hp-text'); // Re-ciblage sécurité
                                const playerHpFill = document.querySelector('.player-stats-panel .hp-bar-fill'); // Re-ciblage sécurité
                                
                                playerHpText.innerHTML = `<strong>HP:</strong> ${data.newHp} / ${data.newHpMax}`;
                                const newHpPercentage = (data.newHp / data.newHpMax) * 100;
                                playerHpFill.style.width = `${newHpPercentage}%`;

                                // Force le rechargement de la modale pour mettre à jour la quantité
                                inventoryAjaxContent.innerHTML = ''; 
                                setTimeout(() => {
                                    inventoryButton.click(); 
                                }, 50); 
                                

                            } else if (isEquipAction) {
                                // Mise à jour des statistiques ATK/DEF (Équipement)
                                playerAttackStat.innerHTML = `<strong>Attaque:</strong> ${data.newAttack}`;
                                playerDefenseStat.innerHTML = `<strong>Défense:</strong> ${data.newDefense}`;
                                
                                const urlInventory = inventoryButton.dataset.inventoryUrl; 
                                fetch(urlInventory, { method: 'GET' })
                                    .then(response => response.text())
                                    .then(html => {
                                        inventoryAjaxContent.innerHTML = html;
                                        attachInventoryListeners(); 
                                    });
                            }

                            if (logsContent) {
                                logsContent.innerHTML += `<p class="log-entry alert-success">${data.message || 'Action réussie'}</p>`;
                                scrollToBottom(); 
                            }
                            
                        } else {
                            if (logsContent) {
                                logsContent.innerHTML += `<p class="log-entry alert-warning">Erreur : ${data.message}</p>`;
                                scrollToBottom();
                            }
                        }
                    })
                    .catch(error => {
                        console.error("Erreur AJAX:", error);
                        if (logsContent) {
                            logsContent.innerHTML += `<p class="log-entry alert-danger">Échec de l'action (Erreur réseau/JSON).</p>`;
                            scrollToBottom();
                        }
                    });
                return; 
            }
            
            // Cas B : Clic sur l'action 102 (Chercher des ressources)
            const targetAction = e.target.closest('a[data-option-id="102"]');
            
            if (targetAction) { 
                e.preventDefault(); 
                
                fetch(targetAction.href, { method: 'GET' }) 
                .then(response => response.json())
                .then(data => {
                    if (data.status === 'success') {
                        
                        // Mise à jour de l'or (seul affichage direct requis ici)
                        if (playerGoldValue) {
                            playerGoldValue.textContent = data.playerStats.gold; 
                        }
                        
                        playerAttackStat.innerHTML = `<strong>Attaque:</strong> ${data.playerStats.attack}`;
                        playerDefenseStat.innerHTML = `<strong>Défense:</strong> ${data.playerStats.defense}`;

                        if (logsContent) {
                            logsContent.innerHTML += `<p class="log-entry alert-${data.flashType}">${data.message}</p>`;
                            scrollToBottom();
                        }
                        
                        // Nettoyage de l'inventaire pour forcer le rechargement si un item a été looté
                        if (inventoryAjaxContent) {
                            inventoryAjaxContent.innerHTML = ''; 
                        }

                    } else {
                        if (logsContent) {
                            logsContent.innerHTML += `<p class="log-entry alert-danger">Action échouée.</p>`;
                            scrollToBottom();
                        }
                    }
                })
                .catch(error => console.error('Erreur AJAX pour l\'action 102:', error));
                
                return; 
            }
        });
    } 
    
    // Déclenche l'initialisation après le chargement du DOM.
    window.addEventListener('pageshow', initLocationListeners);

    if ({{ app.session.get('force_page_reload') ? 'true' : 'false' }}) {
        
        // Supprime le flag via une requête POST asynchrone pour ne pas le réutiliser
        fetch('{{ path("remove_force_reload_flag") }}', { method: 'POST' })
            .then(() => {
                // Force le rechargement complet du navigateur. 'true' garantit un chargement propre.
                window.location.reload(true); 
            })
            .catch(error => {
                // Fallback: s'il y a un souci, on force quand même le rechargement.
                console.error("Erreur lors de la suppression du flag, rechargement forcé: ", error);
                window.location.reload(true);
            });
    }
    
    </script>
{% endblock %}