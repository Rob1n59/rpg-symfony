{% block stylesheets %}
   
    <link rel="stylesheet" href="{{ asset('css/combat.css') }}">
    <link rel="stylesheet" href="{{ asset('css/encounter_choice.css') }}">
    
    <style>
        body, html {
            margin: 0;
            padding: 0;
            height: 100%;
            overflow: hidden;
        }

        /* 1. On enl√®ve le flou du background global */
        .game-page-background {
            filter: none !important; /* Force la suppression du flou */
            background-size: cover;
            background-position: center;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            z-index: -1;
        }

        .result-wrapper {
            display: flex;
            justify-content: center;
            align-items: center;
            width: 100%;
            height: 100vh;
            position: relative;
            z-index: 10;
        }

        /* 2. On ajoute le flou UNIQUEMENT √† l'encadr√© */
        .compact-panel {
            width: 90%;
            max-width: 600px;
            max-height: 85vh;
            padding: 25px !important;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
            box-shadow: 0 0 30px rgba(0,0,0,0.8);
            
            /* Effet de flou sur l'encadr√© */
            background-color: rgba(50, 70, 80, 0.5) !important; /* Couleur sombre semi-transparente */
            backdrop-filter: blur(10px); /* Le flou se fait sur ce qui est DERRI√àRE l'encadr√© */
            -webkit-backdrop-filter: blur(10px);
            border: 1px solid rgba(255, 255, 255, 0.1);
        }

        .rewards-box {
            background-color: rgba(74, 58, 43, 0.9);
            border-radius: 8px;
            padding: 15px;
            margin: 15px 0;
        }

        /* Style pour les textes en jaune */
        .text-yellow {
            color: #FFD700 !important; /* Le m√™me jaune que R√©compenses */
        }
    </style>
{% endblock %}

{% block body %}
    {% set locationImageURL = asset('images/location_scenes/' ~ locationId ~ '.png') %}
    <div class="game-page-background" style="background-image: url('{{ locationImageURL }}');"></div>
    
    <div class="result-wrapper">
        <div class="encounter-panel compact-panel">

            {% if result == 'victory' %}
                <h1 class="result-title victory" style="color: #2ecc71; text-align: center;">VICTOIRE !</h1>
                
                {# Changement en JAUNE ici #}
                <p style="text-align: center; font-style: italic;" class="text-yellow">
                    Vous avez vaincu le {{ lastEnemyName }}.
                </p>
                
                <div class="rewards-box">
                    <h2 style="text-align: center; color: #FFD700; font-size: 1.2rem; margin-top: 0;">R√©compenses</h2>
                    
                    <div style="display: flex; justify-content: space-around; margin-bottom: 10px;">
                        <span>Or : <strong style="color: gold;">+{{ goldGained }}</strong></span>
                        <span>XP : <strong style="color: #79a83d;">+{{ xpGained }}</strong></span>
                    </div>

                    <div style="font-size: 0.9rem; border-top: 1px solid rgba(255,215,0,0.2); padding-top: 10px;">
                        <p style="margin: 5px 0;" class="text-yellow">Total Or : <span style="color: gold;">{{ player.gold }}</span></p>
                        <p style="margin: 5px 0;" class="text-yellow">Total XP : {{ player.experience }}</p>
                    </div>

                    {% if leveledUp %} 
                         <div style="text-align: center; background: rgba(255, 215, 0, 0.2); padding: 5px; border-radius: 5px; margin-top: 10px;">
                            <span style="color: #FFD700; font-weight: bold;">üéâ NIVEAU {{ player.level }} !</span>
                         </div>
                    {% endif %}
                </div>
                
                {# Changement en JAUNE ici #}
                <p style="text-align: center; font-weight: bold;" class="text-yellow">PV : {{ player.hp }} / {{ player.hpMax }}</p>

            {% elseif result == 'defeat' %}
                {# ... Logique de d√©faite similaire avec class="text-yellow" ... #}
            {% endif %}

            <div style="margin-top: 20px; text-align: center;">
                <a href="{{ path('game_location_show', {'id': locationId}) }}" class="action-button flee-button" style="text-decoration: none; display: inline-block;">
                    REPRENDRE LA ROUTE üó∫Ô∏è
                </a>
            </div>
        </div>
    </div>
{% endblock %}